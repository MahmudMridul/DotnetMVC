@model IEnumerable<DotNetMVC.Models.ApplicationType>


<div class="container p-3">
    <div row pt-4>

        <div class="col">
            <h2 class="text-primary"> ApplicationType List </h2>
        </div>

        <div class="col text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>  &nbsp; Create New ApplicationType
            </a>
            
        </div>

    </div>

    <br /> <br />   

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th width="100%"> ApplicationType Name </th>

                </tr>

            </thead>

            <tbody>

                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="100%"> @obj.Name </td>
                        <td class="text-center">
                            <div class="w-75 btn-group pr-5" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-circle-minus"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
            
        </table>
    }
    else
    {
        <p>No Data</p>
    }
</div>
